<UserControl x:Class="ThetaWinApp.Controls.Home.HomeCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThetaWinApp.Controls"
	   		 xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
	         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<ListBox x:Name="lstTiles" ItemsSource="{Binding}" DataContext="{StaticResource DrawerItems}" HorizontalAlignment="Center" VerticalAlignment="Top" >
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<metro:Tile Title="{Binding Title}" Foreground="White" Click="TileButton_Click">
						<materialDesign:PackIcon Kind="{Binding PackIconKind}" Width="60" Height="60" />
					</metro:Tile>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
